            android:background="@color/CLR_fundo_aviso"
            android:padding="5sp"
            android:textAlignment="center"
            android:textColor="@color/CLR_escrever"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Txt_nome6"
